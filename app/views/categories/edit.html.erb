<%= render 'layouts/backend_admins/_backend_header' %>
<div class="container-fluid">
    <div class="row">
        <%= render 'layouts/backend_admins/_sidebar' %>

        <div class="col-md-offset-2 container-fluid">

            <div class="page-header">
                <%= button_to('Back To All Categories', {:action => 'index', :controller => '/categories'}, method: :get, class: 'btn btn-primary', :style => 'float: right;' ) %>

                <h2 style="text-align: left; display: inline;">Edit Category</h2>
            </div>

            <div class="row">
                <%= form_for :category, url: category_path(@category), method: :patch do |f| %>
                <% if @category.errors.any? %>
                <div id="error_explanation">
                    <h2>
                        <%= pluralize(@category.errors.count, "error") %>
                        prohibited this article from being saved:
                    </h2>
                    <ul>
                        <% @category.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                        <% end %>
                    </ul>
                </div>
                <% end %>

                <div class="col-md-8">
                    <div class="form-group">
                        <%= f.label :Name, style: 'float: left;' %>
                        <%= f.text_field :name, class: 'form-control', value: @category.name %>
                    </div>
                </div>

                <div class="col-md-8">
                    <div class="form-group">
                        <%= f.label :Description, style: 'float: left;' %>
                        <%= f.text_area :description, class: 'form-control', size: "24x6", value: @category.description %>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <%= f.submit "Update Category", class:'btn btn-default', style: 'float: left;' %>
                    </div>
                </div>

            </div>
            <% end %>

        </div>
    </div>
