<%= render 'layouts/backend_admins/_backend_header' %>
<!--sidebar-menu-->
<%= render 'layouts/backend_admins/_sidebar' %>


<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <div class="col-md-10 col-md-offset-1">


        <h3 class="sub-header">Providers Bank Details</h3>
        <div class="row">

            <div class="col-md-12">
                <div class="row">

                    <div class="col-md-6">
                        <div class="form-group" style="float:right;">

                            <label class="sr-only" for="exampleInputAmount">Search Phrase</label>
                            <div class="input-group">
                                <input type="text" class="form-control" id="exampleInputAmount" placeholder="Enter Search Phrase">
                                <div class="btn btn-primary input-group-addon">Search</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                      <%= button_to('Add New Bank Details', {:action => 'new', :controller => '/providers/bank_details'}, method: :get, class: 'btn btn-primary', :html => { :style => 'float: right;' }) %>


                    </div>
                </div>
            </div>
        </div>

          <p id="notice"><%= notice %></p>


        <table class="table table-striped table-condensed table-bordered table-hover" style="margin-top: 75px;">
            <thead>
                <tr>
                  <th>Bank</th>
                  <th>Account number</th>
                  <th>Branch</th>
                  <th>Branch code</th>
                  <th>Swift code</th>
                  <th class="col-xs-3">Manipulation</th>
                </tr>
            </thead>
            <t  <% @providers_bank_details.each do |providers_bank_detail| %>
                <tr>
                  <td><%= providers_bank_detail.bank %></td>
                  <td><%= providers_bank_detail.account_number %></td>
                  <td><%= providers_bank_detail.branch %></td>
                  <td><%= providers_bank_detail.branch_code %></td>
                  <td><%= providers_bank_detail.swift_code %></td>
                    <td>
                        <%= link_to  providers_bank_detail_path(providers_bank_detail) ,:class =>"btn btn-primary btn-xs" do %>
                        <i class="fa fa-eye"></i>&nbsp; View
                        <% end %>

                        <%= link_to edit_providers_bank_detail_path(providers_bank_detail), :class =>"btn btn-primary btn-xs" do %>
                        <i class="fa fa-edit"></i>&nbsp; Edit
                        <% end %>

                        <%= link_to  providers_bank_detail , method: :delete, data: { confirm: 'Are you sure?' }, :class =>"btn btn-primary btn-xs" do  %>
                        <i class="fa fa-trash"></i>&nbsp; Delete
                        <% end %>

                    </td>
                </tr>
                <% end %>
            </tbody>
            <%= will_paginate @providers_bank_details %>
        </table>
    </div>
</div>
