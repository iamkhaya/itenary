<%= render 'layouts/backend_admins/_backend_header' %>
<!--sidebar-menu-->
<%= render 'layouts/backend_admins/_sidebar' %>

<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <div class="col-md-10 col-md-offset-1">


        <h3 class="sub-header">Branches</h3>
        <div class="row">

            <div class="col-md-12">
                <div class="row">

                    <div class="col-md-6">
                        <div class="form-group" style="float:right;">

                            <label class="sr-only" for="exampleInputAmount">Search Phrase</label>
                            <div class="input-group">
                                <input type="text" class="form-control" id="exampleInputAmount" placeholder="Enter Search Phrase">
                                <div class="btn btn-primary input-group-addon">Search</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                      <%= button_to('Add New Provider Branch', new_providers_branch_path , method: :get, class: 'btn btn-primary', :html => { :style => 'float: right;' }) %>


                    </div>
                </div>
            </div>
        </div>

          <p id="notice"><%= notice %></p>


        <table class="table table-striped table-condensed table-bordered table-hover" style="margin-top: 75px;">
            <thead>
                <tr>
                  <th>Provider</th>
                  <th>Address</th>
                  <th>Phone number</th>
                  <th>Landline</th>
                  <th>Cell number</th>
                  <th>Opening times</th>
                  <th>Bank detail</th>
                  <th class="col-xs-3">Manipulation</th>
                </tr>
            </thead>
            <tbody>
                <% @providers_branches.each do |providers_branch| %>
                <tr>
                  <td><%= providers_branch.provider %></td>
                  <td><%= providers_branch.address %></td>
                  <td><%= providers_branch.phone_number %></td>
                  <td><%= providers_branch.landline %></td>
                  <td><%= providers_branch.cell_number %></td>
                  <td><%= providers_branch.opening_times %></td>
                  <td><%= providers_branch.bank_detail %></td>
                    <td>
                        <%= link_to providers_branch ,:class =>"btn btn-primary btn-xs" do %>
                        <i class="fa fa-eye"></i>&nbsp; View
                        <% end %>

                        <%= link_to edit_providers_branch_path(providers_branch), :class =>"btn btn-primary btn-xs" do %>
                        <i class="fa fa-edit"></i>&nbsp; Edit
                        <% end %>

                        <%= link_to providers_branch, method: :delete, data: { confirm: 'Are you sure?' }, :class =>"btn btn-primary btn-xs" do  %>
                        <i class="fa fa-trash"></i>&nbsp; Delete
                        <% end %>

                    </td>
                </tr>
                <% end %>
            </tbody>
            <%= will_paginate @providers_branches %>
        </table>
    </div>
</div>

    <%= render 'layouts/backend_admins/_footer' %>
