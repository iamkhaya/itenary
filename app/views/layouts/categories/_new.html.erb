<%= form_for :category, url: categories_path do |f| %>
<div class="col-md-offset-2 container-fluid">

    <div class="page-header">
        <h2 style="text-align: left;">Add New Category</h2>
    </div>

    <div class="row">

        <div class="col-md-7">
            <div class="form-group">
                <%= f.label :Name, style: 'float: left;' %>
                <%= f.text_field :name, class: 'form-control', placeholder:'Category Name' %>
            </div>
        </div>

        <div class="col-md-7">
            <div class="form-group">
                <%= f.label :Description, style: 'float: left;' %>
                <%= f.text_area :description, class: 'form-control', size: "24x6", placeholder:'A short description of the category' %>
            </div>
        </div>

        <div class="col-md-12">
            <div class="form-group">
                <%= f.submit "Add New Category", class:'btn btn-default', style: 'float: left;' %>
            </div>
        </div>
      </div>
    <% end %>
