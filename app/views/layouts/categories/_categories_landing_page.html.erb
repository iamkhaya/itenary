<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <div class="col-md-10 col-md-offset-1">

        <h3 class="sub-header">Categoriess</h3>
        <div class="row">

            <div class="col-md-12">
                <div class="row">

                    <div class="col-md-6">
                        <div class="form-group" style="float:right;">

                            <label class="sr-only" for="exampleInputAmount">Search Phrase</label>
                            <div class="input-group">
                                <input type="text" class="form-control" id="exampleInputAmount" placeholder="Enter Search Phrase">
                                <div class="btn btn-primary input-group-addon">Search</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <%= button_to('Add New Category', {:action => 'new', :controller => '/categories'}, method: :get, class: 'btn btn-primary', :html => { :style => 'float: right;' }) %>
                    </div>
                </div>
            </div>
        </div>

        <table class="table table-striped table-condensed table-bordered table-hover" style="margin-top: 75px;">
            <thead>
                <tr>
                    <th>id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th class="col-xs-3">Manipulation</th>
                </tr>
            </thead>
            <tbody>
                <% @categories.each do |category| %>
                <tr>
                    <td><%= category.id %></td>
                    <td><%= category.name %></td>
                    <td><%= category.description %></td>
                    <td>
                        <%= link_to category_path(category),:class =>"btn btn-primary btn-xs" do %>
                        <i class="fa fa-eye"></i>&nbsp; View
                        <% end %>

                        <%= link_to edit_category_path(category), :class =>"btn btn-primary btn-xs" do %>
                        <i class="fa fa-edit"></i>&nbsp; Edit
                        <% end %>

                        <%= link_to category_path(category), method: :delete, data: { confirm: 'Are you sure?' }, :class =>"btn btn-primary btn-xs" do  %>
                        <i class="fa fa-trash"></i>&nbsp; Delete
                        <% end %>

                    </td>
                </tr>
                <% end %>
            </tbody>
            <%= will_paginate @categories %>
        </table>
    </div>
</div>
