<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <div class="table-responsive col-md-10 col-md-offset-1">

        <h3 class="sub-header">Activities</h3>

        <form class="form-inline">


          <div class="dropdown">
          <button class="btn btn-default dropdown-toggle" style='float:left; 'type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
              Entries per Page
              <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
              <li>
                  <a href="#">10</a>
              </li>
              <li>
                  <a href="#">20</a>
              </li>
              <li>
                  <a href="#">40</a>
              </li>
              <li role="separator" class="divider"></li>
              <li>
                  <a href="#">50</a>
              </li>
          </ul>
        </div>


            <div class="form-group" style="float:right;">



                <label class="sr-only" for="exampleInputAmount">Search Phrase</label>
                <div class="input-group">
                    <input type="text" class="form-control" id="exampleInputAmount" placeholder="Enter Search Phrase">
                    <div class="btn btn-primary input-group-addon">Search</div>
                </div>

                <button type="button" class="btn btn-primary">Add New Activity</button>
            </div>

        </form>

        <table class="table table-striped table-condensed table-bordered table-hover"style="margin-top: 75px;">
            <thead>
                <tr>
                    <th>id</th>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Description</th>
                    <th class="col-xs-3">Manipulation</th>
                </tr>
            </thead>
            <tbody>
                <% @activities.each do |activity| %>
                <tr>
                    <td><%= activity.id %></td>
                    <td><%= activity.name %></td>
                    <td><%= activity.description %></td>
                    <td><%= activity.category %></td>
                    <td>
                        <%= link_to activity_path(activity),:class =>"btn btn-primary btn-xs" do %>
                        <i class="fa fa-eye"></i>&nbsp; View
                        <% end %>

                        <%= link_to activity_path(activity), :class =>"btn btn-primary btn-xs" do %>
                        <i class="fa fa-edit"></i>&nbsp; Edit
                        <% end %>

                        <%= link_to activity_path(activity), :class =>"btn btn-primary btn-xs" do %>
                        <i class="fa fa-trash"></i>&nbsp; Delete
                        <% end %>

                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>
