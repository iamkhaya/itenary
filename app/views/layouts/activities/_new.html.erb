
<% @title = "Chills and Thrills - Add new activity" %>
<%= form_for :activity, url: activities_path do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :category %><br>
    <%= f.text_field :category %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </p>

  <p>
    <%= f.submit "Add new Activity" %>
  </p>
<% end %>
