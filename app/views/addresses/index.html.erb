<%= render 'layouts/backend_admins/_backend_header' %>
<!--sidebar-menu-->
<%= render 'layouts/backend_admins/_sidebar' %>

<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <div class="col-md-10 col-md-offset-1">


        <h3 class="sub-header">Addresses</h3>
        <div class="row">

            <div class="col-md-12">
                <div class="row">

                    <div class="col-md-6">
                        <div class="form-group" style="float:right;">

                            <label class="sr-only" for="exampleInputAmount">Search Phrase</label>
                            <div class="input-group">
                                <input type="text" class="form-control" id="exampleInputAmount" placeholder="Enter Search Phrase">
                                <div class="btn btn-primary input-group-addon">Search</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                      <%= button_to('Add New Address', new_address_path, method: :get, class: 'btn btn-primary', :html => { :style => 'float: right;' }) %>


                    </div>
                </div>
            </div>
        </div>

          <p id="notice"><%= notice %></p>


        <table class="table table-striped table-condensed table-bordered table-hover" style="margin-top: 75px;">
            <thead>
                <tr>
                  <th>Street number</th>
                  <th>Street name</th>
                  <th>Suburb</th>
                  <th>City</th>
                  <th>Region</th>
                  <th>Postal code</th>
                  <th>Box number</th>
                  <th>Country</th>
                  <th>Continent</th>
                  <th class="col-xs-3">Manipulation</th>
                </tr>
            </thead>
            <tbody>
                <% @addresses.each do |address| %>
                <tr>
                  <td><%= address.street_number %></td>
                  <td><%= address.street_name %></td>
                  <td><%= address.suburb %></td>
                  <td><%= address.city %></td>
                  <td><%= address.region %></td>
                  <td><%= address.postal_code %></td>
                  <td><%= address.box_number %></td>
                  <td><%= address.country %></td>
                  <td><%= address.continent %></td>
                    <td>
                        <%= link_to address_path(address) ,:class =>"btn btn-primary btn-xs" do %>
                        <i class="fa fa-eye"></i>&nbsp; View
                        <% end %>

                        <%= link_to edit_address_path(address), :class =>"btn btn-primary btn-xs" do %>
                        <i class="fa fa-edit"></i>&nbsp; Edit
                        <% end %>

                        <%= link_to address_path(address) , method: :delete, data: { confirm: 'Are you sure?' }, :class =>"btn btn-primary btn-xs" do  %>
                        <i class="fa fa-trash"></i>&nbsp; Delete
                        <% end %>

                    </td>
                </tr>
                <% end %>
            </tbody>
            <%= will_paginate @addresses %>
        </table>
    </div>
</div>

    <%= render 'layouts/backend_admins/_footer' %>
